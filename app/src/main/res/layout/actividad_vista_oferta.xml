<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Tarjeta -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/myCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        style="?attr/materialCardViewElevatedStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Contenedor interno de la tarjeta -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/perfil"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_shape"
                android:clipToOutline="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="María Camila"
                android:textColor="@color/black"
                android:fontFamily="@font/urbanist_semibold"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/profileImage"
                app:layout_constraintStart_toEndOf="@id/profileImage"
                app:layout_constraintTop_toTopOf="@id/profileImage" />

            <TextView
                android:id="@+id/fechaOferta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27 Ago 2025"
                android:fontFamily="@font/urbanist_regular"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintTop_toTopOf="@id/userName"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/imagenOferta"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/producto"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/profileImage"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/nombreOferta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/oferta"
                android:textColor="@color/black"
                android:fontFamily="@font/urbanist_bold"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/imagenOferta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imagenOferta" />

            <TextView
                android:id="@+id/descripcionOferta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/desc_oferta"
                android:textColor="@color/black"
                android:fontFamily="@font/urbanist_regular"
                app:layout_constraintTop_toBottomOf="@id/nombreOferta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imagenOferta" />

            <!-- NUEVO: Precio NUEVO debajo de la descripción -->
            <TextView
                android:id="@+id/precioNuevo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="$ 0"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/urbanist_bold"
                app:layout_constraintTop_toBottomOf="@id/descripcionOferta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imagenOferta" />

            <!-- NUEVO: Fecha HASTA debajo del precio nuevo -->
            <TextView
                android:id="@+id/fechaHasta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hasta 31 Dic 2025"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:fontFamily="@font/urbanist_regular"
                app:layout_constraintTop_toBottomOf="@id/precioNuevo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imagenOferta" />

            <TextView
                android:id="@+id/ubicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_precio_redondo"
                android:padding="8dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/location"
                android:fontFamily="@font/urbanist_bold"
                android:text="@string/ver_ubicacion"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imagenOferta"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- NUEVO: Precio ORIGINAL tachado entre ubicación y like -->
            <TextView
                android:id="@+id/precioOriginal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 0"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:fontFamily="@font/urbanist_regular"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/ubicacion"
                app:layout_constraintTop_toTopOf="@id/btnLike"
                app:layout_constraintBottom_toBottomOf="@id/btnLike"
                app:layout_constraintEnd_toStartOf="@id/btnLike" />

            <TextView
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/urbanist_bold"
                app:layout_constraintEnd_toStartOf="@id/btnLike"
                app:layout_constraintTop_toTopOf="@id/btnLike"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/outline_cardio_load_24"
                android:contentDescription="Like"
                app:layout_constraintTop_toBottomOf="@id/imagenOferta"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/myCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
