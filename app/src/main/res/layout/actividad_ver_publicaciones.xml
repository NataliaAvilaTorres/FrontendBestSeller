<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor vertical para header y tarjetas -->
    <LinearLayout
        android:id="@+id/headerCardsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnRegresar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_atras"
                android:contentDescription="Regresar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mis Publicaciones"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="12dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="InformaciÃ³n"
                    android:fontFamily="@font/urbanist_semibold"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginStart="12dp"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Tarjetas estadÃ­sticas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="-5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <!-- Tarjeta Publicaciones -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#B5E0D6"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNumeroPublicaciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="100sp"
                        android:textStyle="bold"
                        android:textColor="#77B5A4"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NÃºmero de\npublicaciones"
                        android:textAlignment="center"
                        android:fontFamily="@font/urbanist_extrabold"
                        android:textSize="20sp"
                        android:textColor="#77B5A4"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tarjeta Likes -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#B5E0D6"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLikesRecibidos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="100sp"
                        android:textStyle="bold"
                        android:textColor="#77B5A4"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Me gusta\nrecibidos"
                        android:textAlignment="center"
                        android:fontFamily="@font/urbanist_extrabold"
                        android:textSize="20sp"
                        android:textColor="#77B5A4"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <!-- Texto secciÃ³n publicaciones -->
    <TextView
        android:id="@+id/tituloMisPublicaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“Œ Mis publicaciones"
        android:textColor="@color/black"
        android:fontFamily="@font/urbanist_bold"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerCardsContainer"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- RecyclerView para publicaciones -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMisPublicaciones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tituloMisPublicaciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
